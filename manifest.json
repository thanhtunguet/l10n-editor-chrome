{
  "name": "Localization Editor",
  "version": "2.1.3",
  "description": "Localization editor for Flutter and React projects",
  "manifest_version": 3,
  "icons": {
    "16": "src/assets/icons/16.png",
    "32": "src/assets/icons/32.png",
    "48": "src/assets/icons/48.png",
    "64": "src/assets/icons/64.png",
    "128": "src/assets/icons/128.png"
  },
  "permissions": [
    "activeTab",
    "cookies",
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "./src/index.background.ts",
    "type": "module"
  },
  "options_ui": {
    "page": "./src/options.html",
    "open_in_tab": true
  },
  "action": {
    "default_popup": "./src/popup.html",
    "default_icon": {
      "16": "src/assets/icons/16.png",
      "32": "src/assets/icons/32.png",
      "48": "src/assets/icons/48.png",
      "64": "src/assets/icons/64.png",
      "128": "src/assets/icons/128.png"
    }
  }
}